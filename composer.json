{
    "name": "codezero/browser-locale",
    "description": "Get the most preferred locales from your visitor's browser.",
    "keywords": [
        "website",
        "browser",
        "locale",
        "language",
        "country",
        "php",
        "detect"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Vermeyen",
            "email": "ivan@codezero.be"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "illuminate/support": "^10.0|^11.0",
        "mockery/mockery": "^1.3.3",
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "CodeZero\\BrowserLocale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeZero\\BrowserLocale\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CodeZero\\BrowserLocale\\Laravel\\BrowserLocaleServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
